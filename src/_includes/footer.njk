<footer class="container md:flex justify-between">
    <div id="footer-contact" class="leading-tight text-sm">
        <h5>Contact</h5>
        <div class="mb-2">
            {{ contact.company }}<br>
            {{ contact.address.address1 }}<br>
            {% if contact.address.address2 %}{{ contact.address.address2 }}<br>{% endif %}
            {{ contact.address.town }}<br>
            {{ contact.address.county }}<br>
            {{ contact.address.postcode }}
        </div>
        {% if contact.address2 %}
        <div class="mb-3">
            <span class="font-bold underline">{{ contact.address2.name }}</span><br>
            {{ contact.address2.address1 }}<br>
            {% if contact.address2.address2 %}{{ contact.address2.address2 }}<br>{% endif %}
            {{ contact.address2.town }}<br>
            {{ contact.address2.county }}<br>
            {{ contact.address2.postcode }}
        </div>
        {% endif %}
        <div class="mb-3">
            <a class="block font-bold text-2xl" href="tel:{{ contact.telephone }}">{{ contact.telephone }}</a>
            <a class="block text-xl" href="mailto:{{ contact.email }}">{{ contact.email }}</a>
        </div>
